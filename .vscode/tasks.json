{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Full Build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			],
			"command": "npm run clean && npm run build"
		},
		{
			"type": "npm",
			"script": "build-debug",
			"group": "build",
			"problemMatcher": [],
			"label": "Debug Build"
		}
	]
}